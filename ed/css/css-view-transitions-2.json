{
  "spec": {
    "title": "CSS View Transitions Module Level 2",
    "url": "https://drafts.csswg.org/css-view-transitions-2/"
  },
  "properties": [],
  "atrules": [
    {
      "name": "@view-transition",
      "descriptors": [
        {
          "name": "trigger",
          "for": "@view-transition",
          "value": "navigation | none",
          "initial": "none",
          "values": [
            {
              "name": "none",
              "prose": "There will be no transition.",
              "type": "value",
              "value": "none"
            },
            {
              "name": "navigation",
              "prose": "The transition will be enabled if the navigation is same-origin, without cross-origin redirects.",
              "type": "value",
              "value": "navigation"
            }
          ]
        }
      ],
      "value": "@view-transition same-origin { <declaration-rule-list> }"
    }
  ],
  "selectors": [
    {
      "name": ":active-view-transition()",
      "value": ":active-view-transition(<vt-type-selector>)"
    }
  ],
  "values": [
    {
      "name": "<vt-type-selector>",
      "type": "type",
      "value": "'*' | <custom-ident>#"
    }
  ]
}
